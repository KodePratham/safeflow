# Copy this file to .env.local and fill in your values

# ============================================
# STACKS CONFIGURATION
# ============================================

# Your deployed contract addresses on Stacks Testnet
# Update these after deploying with Clarinet
NEXT_PUBLIC_DEVPAYMENTS_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
NEXT_PUBLIC_USDCX_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
NEXT_PUBLIC_SAFEFLOW_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM

# Stacks Network (testnet or mainnet)
NEXT_PUBLIC_STACKS_NETWORK=testnet

# ============================================
# ETHEREUM CONFIGURATION  
# ============================================

# Circle xReserve Contract on Sepolia
NEXT_PUBLIC_XRESERVE_ADDRESS=0x008888878f94C0d87defdf0B07f46B93C1934442

# USDC Contract on Sepolia
NEXT_PUBLIC_USDC_SEPOLIA_ADDRESS=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238

